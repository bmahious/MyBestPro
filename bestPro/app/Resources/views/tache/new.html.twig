{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
       <h1 class="title">Créer une tâche</h1>
        {{ form_start(form) }}

        <div class="form-group">
            {{ form_row(form.titre, {'attr': {'class':'form-control'}}) }}
            {{ form_row(form.description, {'attr': {'class':'form-control'}}) }}
            {{ form_row(form.statut, {'attr': {'class':'form-control'}}) }}


        </div>
        <div class="form-group">
            <input class="btn btn-success col-md-2" type="submit" value="Créer" />
        </div>

        {{ form_end(form) }}

        <div class="form-group">
            <a href="{{ path('tache_index') }}">
                <button class="btn btn-default col-md-3"> Retour à la liste de tâches </button>

            </a>
        </div>
    </div>
{% endblock %}
